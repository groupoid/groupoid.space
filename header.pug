mixin tex(center=false, paragraph=true)
    if paragraph
        p(style=center ? {'text-align': 'center' } : null)!= tex(`${block}`)
    else
        span(style=center ? {
            'text-align': 'center',
            'display': 'block',
            'padding-top': '8px',
            'padding-bottom': '8px',
        } : null)!= tex(`${block}`)

mixin tex2(center=false, paragraph=true)
    p(style=center ? {
        'text-align': 'center',
        'display': 'block',
        'padding-top': '8px',
        'padding-bottom': '8px',
    } : null)!= tex(`${block}`)

mixin code
    code!= highlight(`${block}`)

mixin header(logo, title, subtitle)
    header.header
        .header__titles
            h1.header__title!= title
            h4.header__subtitle!= subtitle

